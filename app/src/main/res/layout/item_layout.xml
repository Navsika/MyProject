<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_of_item"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/text_of_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/image_of_item"
            android:text="This is a text"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/description_of_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_of_item"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/image_of_item"
            android:text="This is a description"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/eat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_of_item"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/image_of_item"
            android:text="СЪЕСТЬ"
            android:backgroundTint="@color/orange"
            android:textColor="@color/black"/>

    </RelativeLayout>





</androidx.cardview.widget.CardView>