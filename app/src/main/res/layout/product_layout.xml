<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_of_product"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:padding="10dp"

        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_of_product"
        android:layout_toRightOf="@+id/image_of_product"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:text="This is a text"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_of_product"
       android:layout_below="@+id/text_of_product"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:text="This is a description"
        android:layout_toRightOf="@+id/image_of_product"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_of_product"
        android:layout_below="@+id/description_of_product"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:text="This is a price"
        android:layout_toRightOf="@+id/image_of_product"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_of_product"
        android:layout_toRightOf="@+id/image_of_product"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="КУПИТЬ"/>





</RelativeLayout>