<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/parent_layout">

        <CheckBox
            android:id="@+id/todoCheckBox"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:buttonTint="@color/light_orange"
            android:paddingStart="8dp" />

        <TextView
            android:id="@+id/stage_of_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="IS DOING"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_task"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:text="This is a sample of task"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_description"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_task"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="2dp"
            android:text="This is a sample of description"
            android:textSize="15sp" />

        <Button
            android:id="@+id/start_timer"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_button"
            android:drawableTop="@drawable/ic_play"
            android:textColor="@color/black"
            app:backgroundTint="@color/orange"

            />



    </RelativeLayout>




</androidx.cardview.widget.CardView>
